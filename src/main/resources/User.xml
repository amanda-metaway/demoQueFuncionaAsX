<!--        INSERT INTO users (name, perfil_id, cpfUsuario, password)-->
<!--        VALUES (#name#, #perfil_id.id#, #cpfUsuario#, #password#)-->
<!--    </insert>-->

    <insert id="saveUser" parameterClass="com.example.demo.Model.User">
        <selectKey keyProperty="id" resultClass="int">
            SELECT nextval('users_id_seq'::regclass))
        </selectKey>
        INSERT INTO users (id, name, perfil_id, cpfusuario, password)
        VALUES (#id#, #name#, #perfil_id.id#, #cpfUsuario#, #password#)
    </insert>




    <update id="updateUser" parameterClass="com.example.demo.Model.User">
        UPDATE users
        SET name       = #name#,
            perfil_id  = #perfil_id#,
            cpfusuario = #cpfUsuario#,
            password   = #password#
        WHERE id = #id#
    </update>

    <delete id="deleteUser" parameterClass="java.lang.Integer">
        DELETE
        FROM users
        WHERE id = #value#
    </delete>

</sqlMap>
